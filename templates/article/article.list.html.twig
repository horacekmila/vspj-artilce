{% extends 'base.html.twig' %}

{% block body %}
    <h1>Assigned to me</h1>
    {% for assignedArticle in assignedArticles %}
        {{ assignedArticle.Title }}:
        <a href={{ path("article_view", {"article": assignedArticle.id}) }}><input type="button" value="View" /></a>
        <a href={{ path("article_edit", {"article": assignedArticle.id}) }}><input type="button" value="Edit" /></a>
        <a href={{ path("article_submit", {"article": assignedArticle.id}) }}><input type="button" value="Subbmit" /></a>
        <br>
    {% endfor %}
    <h1>Other Articles</h1>
    {% for otherArticles in otherArticles %}
        <a>{{ otherArticles.id }}</a>
    {% endfor %}
{% endblock %}